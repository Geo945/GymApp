<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" prefWidth="600" prefHeight="400"
          xmlns="http://javafx.com/javafx/8.0.172-ea"
          fx:controller="proiect.fis.gym.aplication.controllers.RegisterGymManagerController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Manager Register Form" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

    <Label text="Select role:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <ChoiceBox fx:id="selectRoleChoiceBox" value="Gym Manager" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Customer" />
                <String fx:value="Gym Manager" />
                <String fx:value="Admin" />
            </FXCollections>
        </items>
    </ChoiceBox>


    <Label text="First name: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Gym location:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <TextField fx:id="gymLocation" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Company name:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>

    <TextField fx:id="companyName" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="12">
        <Button onAction="#handleSubmitRegistrationButton" text="Submit registration"/>
    </HBox>

    <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="12">
        <Button onAction="#handleBackToLoginButton" text="Back to login"/>
    </HBox>

</GridPane>
